{
  "name": "@webcomponents-preview/cem-plugins",
  "description": "Plugins for @custom-elements-manifest/analyzer to add some more informations for WCP.",
  "repository": "webcomponents-preview/cem-plugins",
  "version": "0.0.3",
  "license": "MIT",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts src",
    "clean": "shx rm -rf dist",
    "test": "jest",
    "test:ci": "jest --ci --passWithNoTests --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "prebuild": "npm run clean",
    "build": "ts-node esbuild.config.ts"
  },
  "peerDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.8"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.6.8",
    "@types/jest": "29.0.3",
    "@types/node": "18.14.4",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "esbuild": "0.17.10",
    "eslint": "8.35.0",
    "eslint-plugin-import": "2.27.5",
    "jest": "29.0.3",
    "jest-junit": "14.0.1",
    "npm-run-all": "4.1.5",
    "release-it": "15.7.0",
    "shx": "0.3.4",
    "ts-jest": "29.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": "^18"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "test-unit.xml",
    "usePathForSuiteName": true
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
