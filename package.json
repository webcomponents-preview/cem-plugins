{
  "name": "@webcomponents-preview/cem-plugins",
  "description": "Plugins for @custom-elements-manifest/analyzer to add some more informations for WCP.",
  "repository": "webcomponents-preview/cem-plugins",
  "version": "0.0.34",
  "license": "MIT",
  "author": {
    "name": "David Enke",
    "email": "david@enke.dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "scripts": {
    "postinstall": "ts-node generate-package-types.ts ./package.d.ts",
    "lint": "eslint --ext .ts src",
    "clean": "shx rm -rf dist",
    "test": "jest",
    "test:ci": "jest --ci --passWithNoTests --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "prebuild": "npm run clean",
    "build": "ts-node esbuild.config.ts"
  },
  "peerDependencies": {
    "@custom-elements-manifest/analyzer": "^0.8.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.8.0",
    "@custom-elements-manifest/to-markdown": "0.1.0",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/node-fetch": "2.6.3",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "cross-env": "7.0.3",
    "esbuild": "0.17.14",
    "eslint": "8.37.0",
    "eslint-plugin-import": "2.27.5",
    "fast-glob": "3.2.12",
    "jest": "29.5.0",
    "jest-junit": "15.0.0",
    "npm-run-all": "4.1.5",
    "release-it": "15.9.3",
    "shx": "0.3.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typeconv": "2.2.0",
    "typescript": "5.0.2",
    "web-component-analyzer": "2.0.0-next.4"
  },
  "engines": {
    "node": "^18"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "test-unit.xml",
    "usePathForSuiteName": true
  }
}
